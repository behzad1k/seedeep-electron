{
  "name": "seedeep",
  "version": "1.0.0",
  "description": "AI-powered CCTV monitoring system",
  "author": "SeeDeep Team",
  "main": "dist-electron/main/index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "vite",
    "build:backend": "./build-backend.sh",
    "build:frontend": "tsc && vite build",
    "build:all": "npm run build:backend && npm run build:frontend && electron-builder",
    "electron:build": "npm run build:all",
    "electron:build:mac": "npm run build:all --mac",
    "electron:build:mac:unsigned": "npm run build:backend && npm run build:frontend && electron-builder --mac --config.mac.identity=null",
    "electron:build:win": "npm run build:backend && npm run build:frontend && electron-builder --win",
    "electron:build:win:portable": "npm run build:backend && npm run build:frontend && electron-builder --win portable",
    "test:backend": "cd build/backend && ./start-backend",
    "test:backend:dev": "cd backend && python3 main.py"
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.0",
    "@mui/material": "^5.14.0",
    "axios": "^1.13.2",
    "hls.js": "^1.6.14",
    "lucide-react": "^0.544.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.24",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.3",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.3.0",
    "vite": "^7.1.11",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "build": {
    "appId": "com.seedeep.app",
    "productName": "SeeDeep",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist-electron/**/*",
      "dist-renderer/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "build/backend",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true,
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true,
        "shortcutName": "SeeDeep"
      },
    "portable": {
      "artifactName": "SeeDeep-${version}-portable.exe"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "identity": null,
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "dmg": {
      "title": "SeeDeep Installer",
      "sign": false,
      "format": "UDZO",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    }
  }
}

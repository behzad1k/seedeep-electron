{
  "name": "electron-react-mui-app",
  "version": "1.0.0",
  "description": "Electron desktop app with TypeScript, React, and Material-UI",
  "main": "dist/main.js",
  "homepage": "./",
  "scripts": {
    "start": "npm run build-electron && concurrently \"npm run start-renderer\" \"wait-on http://localhost:3000 && npm run start-electron\"",
    "start-renderer": "react-scripts start",
    "start-electron": "electron .",
    "build": "npm run build-renderer && npm run build-electron",
    "build-renderer": "react-scripts build",
    "build-electron": "tsc -p electron/",
    "build-all": "npm run build-renderer && npm run build-electron",
    "dist": "npm run build-all && electron-builder",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.3",
    "electron": "^31.0.0",
    "electron-builder": "^24.0.0",
    "typescript": "^4.9.5",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@fontsource/roboto": "^5.0.0",
    "@mui/icons-material": "^5.14.0",
    "@mui/material": "^5.14.0",
    "lucide-react": "^0.544.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^3.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.yourcompany.seedeep",
    "productName": "SeeDeep",
    "directories": {
      "output": "release"
    },
    "files": [
      "build/**/*",
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
